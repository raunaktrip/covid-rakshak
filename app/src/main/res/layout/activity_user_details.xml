<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".user_details">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:text="Please enter your details"
                android:layout_marginTop="50dp"
                android:id="@+id/tv"
                android:textSize="25dp"
                />


            <EditText
                android:id="@+id/fullName"
                android:layout_width="300dp"

                android:layout_height="wrap_content"
                android:layout_below="@+id/tv"
                android:layout_centerHorizontal="true"
                android:layout_margin="10dp"
                android:padding="20dp"
                android:hint="Full name"/>
            <EditText
                android:id="@+id/userAge"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:layout_below="@+id/fullName"
                android:layout_centerHorizontal="true"
                android:padding="20dp"
                android:hint="Age"/>
            <EditText
                android:id="@+id/userGender"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/userAge"
                android:layout_margin="10dp"
                android:layout_centerHorizontal="true"
                android:padding="20dp"
                android:hint="Gender"/>
            <EditText
                android:id="@+id/userHeight"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/userGender"
                android:layout_margin="10dp"
                android:layout_centerHorizontal="true"
                android:padding="20dp"
                android:hint="Height"/>
            <EditText
                android:id="@+id/userWeight"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/userHeight"
                android:layout_margin="10dp"
                android:layout_centerHorizontal="true"
                android:padding="20dp"
                android:hint="Weight"/>
            <EditText
                android:id="@+id/userAadhar"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/userWeight"
                android:layout_margin="10dp"
                android:layout_centerHorizontal="true"
                android:padding="20dp"
                android:hint="Aadhar Number"/>
            <EditText
                android:id="@+id/userPostalCode"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/userAadhar"
                android:layout_margin="10dp"
                android:layout_centerHorizontal="true"
                android:padding="20dp"
                android:hint="Postal Code"/>


            <Button
                android:id="@+id/btn_submit"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:text="Submit"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/userPostalCode"
                android:background="#58a0f1"/>
        </RelativeLayout>



    </ScrollView>



</RelativeLayout>